<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<%= link_to 'Users', users_path, class:"w3-button w3-round-large w3-pink" %>
<%= link_to 'Create a New Micropost', new_micropost_path ,class: "w3-button w3-round-large w3-pink"%>
<%= link_to 'New User', new_user_path, class:"w3-button w3-round-large w3-pink" %>
<br>
<br>
<table class="w3-table-all">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Show', micropost,class: "w3-button w3-round-large w3-green" %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost),class: "w3-button w3-round-large w3-blue" %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } ,class: "w3-button w3-round-large w3-red"%></td>
      </tr>
    <% end %>
  </tbody>
</table>


